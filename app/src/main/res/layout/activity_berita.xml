<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BeritaActivity" android:background="#FFF">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp" tools:ignore="MissingConstraints" android:background="#FFF">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:gravity="center" android:background="#FFF">
            <Button
                    android:text="back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btn_back"
                    android:layout_weight="3" android:background="@drawable/bg_transparent" android:textSize="14sp"
                    android:textAllCaps="false"/>
            <TextView
                    android:text="XCO-19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView10" android:paddingLeft="10dip"
                    android:paddingTop="20dip" android:paddingRight="10dip" android:paddingBottom="20dip"
                    android:textAllCaps="true" android:textColor="#000" android:textAlignment="center"
                    android:textSize="26sp"
                    android:layout_weight="1"/>
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_weight="3"/>
        </LinearLayout>
        <TextView
                android:text="Ini Judul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/txt_judul" android:padding="10dip"
                android:textColor="#000" android:textSize="26sp" android:background="#FFF"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dip" app:srcCompat="@drawable/bg_berita" android:id="@+id/txt_image"/>
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/txt_time" android:padding="10dip"
                android:textColor="#000"/>
        <WebView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/webview"/>
    </LinearLayout>
</ScrollView>