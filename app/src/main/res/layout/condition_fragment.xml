<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:gravity="center" android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip">
            <Button
                    android:text="Profil"
                    android:layout_width="40dip"
                    android:layout_height="20dip" android:id="@+id/btn_condition_to_profil" android:layout_weight="1"
                    android:background="@drawable/bg_btn_transparent" android:textAllCaps="false"
                    android:layout_marginLeft="10dip"/>
            <TextView
                    android:text="XCO-19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView23" android:layout_weight="10"
                    android:textAlignment="center" android:textColor="#000" android:textSize="26sp"/>
            <Button
                    android:text="Berita"
                    android:layout_width="40dip"
                    android:layout_height="20dip" android:id="@+id/btn_condition_to_berita" android:layout_weight="1"
                    android:background="@drawable/bg_btn_transparent" android:textAllCaps="false"
                    android:layout_marginRight="10dip"/>
        </LinearLayout>
        <TextView
                android:text="Condition Status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView26" android:textAllCaps="true"
                android:textColor="#000" android:layout_margin="10dp"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:background="@drawable/bg_status"
                android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_marginBottom="10dp"
                android:paddingTop="20dp" android:paddingBottom="20dp">
            <TextView
                    android:text="Your Condition is:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView29" android:textColor="#000"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/txt_condition_status" android:textColor="#000"
                    android:textSize="30sp"/>
        </LinearLayout>
        <TextView
                android:text="Current Condition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView33" android:layout_margin="10dp"
                android:textAllCaps="true" android:textColor="#000"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:background="@drawable/bg_batuk"
                    android:layout_weight="1" android:layout_marginRight="10dp">
                <TextView
                        android:text="Oxygen Saturation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView34" android:textAllCaps="true"
                        android:textAlignment="center" android:textColor="#fff" android:paddingTop="10dp"
                        android:paddingBottom="5dp" android:textStyle="bold"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/txt_condition_oxy"
                        android:textColor="#fff"
                        android:textAllCaps="true" android:textStyle="bold" android:textSize="23sp"
                        android:paddingTop="10dp" android:paddingBottom="5dp" android:textAlignment="center"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:textSize="16sp"
                        android:textColor="#fff" android:textAlignment="center" android:gravity="bottom|center"
                        android:id="@+id/txt_condition_oxy_odd"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"
                    android:background="@drawable/bg_panas">
                <TextView
                        android:text="Temperature"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView37" android:textAllCaps="true"
                        android:textColor="#fff" android:textAlignment="center" android:textStyle="bold"
                        android:paddingTop="10dp" android:paddingBottom="5dp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/txt_condition_temp"
                        android:textAlignment="center" android:textAllCaps="true" android:textColor="#fff"
                        android:textStyle="bold" android:textSize="26sp" android:paddingTop="10dp"
                        android:paddingBottom="5dp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom|center" android:textColor="#fff" android:textSize="16sp"
                        android:id="@+id/txt_condition_temp_odd"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:background="@drawable/bg_darah"
                    android:layout_marginRight="10dp" android:layout_weight="1">
                <TextView
                        android:text="Heart Rate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView40" android:textAllCaps="true"
                        android:textAlignment="center" android:textColor="#fff" android:textStyle="bold"
                        android:paddingTop="10dp" android:paddingBottom="5dp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/txt_condition_ht"
                        android:textAlignment="center" android:textColor="#fff" android:textAllCaps="true"
                        android:textSize="26sp" android:textStyle="bold" android:paddingTop="10dp"
                        android:paddingBottom="5dp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAlignment="center" android:textColor="#fff" android:textSize="16sp"
                        android:gravity="bottom|center" android:id="@+id/txt_condition_ht_odd"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"
                    android:background="@drawable/bg_gps">
                <TextView
                        android:text="Location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/textView43"
                        android:textAlignment="center" android:textAllCaps="true" android:textColor="#fff"
                        android:textStyle="bold" android:paddingTop="10dp" android:paddingBottom="5dp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/txt_condition_loc" android:textAllCaps="true"
                        android:textAlignment="center" android:textColor="#fff" android:textSize="26sp"
                        android:textStyle="bold" android:paddingTop="10dp" android:paddingBottom="5dp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/txt_condition_loc_odd"
                        android:textAlignment="center" android:textColor="#fff" android:textSize="16sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>