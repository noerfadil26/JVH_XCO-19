<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:background="@drawable/bg_berita"
              android:layout_marginBottom="10dip" android:id="@+id/layout_spoiler">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dip" app:srcCompat="@drawable/bg_status" android:id="@+id/thumbnail"
            android:minHeight="200dp"/>
    <TextView
            android:text="26 Januari 2020"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/artikel_time" android:textColor="#000"
            android:paddingTop="10dp" android:paddingBottom="10dp" android:textSize="12sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/artikel_text" android:paddingBottom="10dp"
            android:textColor="#000" android:textSize="20dp"/>
</LinearLayout>